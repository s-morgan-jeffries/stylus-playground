.centering-block
  background-color lightgray
  height 150px
  position relative

.centered-block
  align(vertical)
  width 100px
  height 50px
  background-color #ff0000

.container
  cf()

.main-content
  column(2/3)
  shift(1/6)
  background-color #0000ff

.left-aside
  column(1/6)
  shift(-2/3)
  background-color #ffff00

.right-aside
  column(1/6)
  background-color #ff0000

.stacking-block
  /*column(1)*/
  /*clear both*/
  cf()
  background-color lightblue
  /*+tablet()*/
    /*stack()*/

.stacked-block
  stack()
  +desktop()
    column(1/3)

.stacked-block--1
  background-color #008000

.stacked-block--2
  background-color #ff0000