.responsive-nav-patterns
  &.footer-menu
    /*header*/
    /*cf()*/
    main
      height 1500px
    .nav
      ul
        display none
        list-style none
        padding 0px
        margin 0px
        font-weight bold
        text-align center
        li
          display inline-block
          text-align left
          a
            display: block;
            padding: 15px 10px;
            text-decoration: none;
            color: #444
            &:hover
              background-color: #ccc;
    .anchor-link
      display: inline-block;
      text-align: center;
      padding: 10px 15px;
      color: #fff;
      background-color: #0084B4;
      text-decoration: none;
      margin: 3px;
      float: right;
    .example-footer
      font-size: 1.1em;
    .mobile-nav
      display: block;
      ul
        list-style: none;
        margin: 0px;
        padding: 0px;
        li
          list-style: none;
          text-align: center;
          a
            display: block;
            padding: 20px 10px;
            border-bottom: 1px solid #ccc;
            text-decoration: none;
            &:hover
              background-color: #ccc;
              color: #fff;
    @media all and (min-width: 48em)
      .nav
        ul
          display: block;
      .anchor-link
        display: none
      .mobile-nav
        display: none