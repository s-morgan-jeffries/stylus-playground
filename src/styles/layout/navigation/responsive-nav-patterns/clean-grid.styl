.responsive-nav-patterns
  &.clean-grid
    .nav
      width: 100%
      ul
        list-style: none
        padding: 0px
        margin: 0px
        font-weight: bold
        text-align: center
        li
          display: inline-block;
          a
            display: block
            padding: 10px 20px
            text-decoration: none
            color: #444
            &:hover
              background-color: #888
              color: #fff;
    +below(48em)
      .example-header .container
        width: 100%
      .nav ul
        width: 100%
        font-weight: normal;
        li
          width: 50%
          float: left;
          &:nth-of-type(odd) a
            border-right: 1px solid #ccc
          a
            padding: 8px 0px
            border-bottom: 1px solid #ccc
            display: block;
