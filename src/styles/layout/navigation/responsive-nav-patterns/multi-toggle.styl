.responsive-nav-patterns
  &.multi-toggle
    .menu-link
      display none
    .menu
      float left
      transition all 0.3s ease
      & > li > ul.sub-menu
        min-width 10em
        padding 4px 0
        background-color #f4f4f4
        border 1px solid #CCC
      & > ul > li
        display inline-block
      ul
        padding 0px
        margin 0px
        list-style none
        position relative
        display inline-table
        li
          padding 0px
          a
            display block
            text-decoration none
            color #000
            font-size .9em
          & > a
            height 58px
            padding 19px 12px
          &:hover > ul
            display block
        ul
          display none
          position absolute
          top 100%
          min-width 160px
          background-color #f4f4f4
          border 1px solid #CCC
          & > li
            position relative
            a
              padding 5px 15px 5px 10px
              height auto
              background-color #f4f4f4
              &:hover
                background-color #42BBA3
                color #fff
          ul
            position absolute
            left 100%
            top 0
    +below(768px)
      .example-header .container
        width 100%
      a.menu-link
        display block
        color #fff
        background-color #333
        float right
        text-decoration none
        padding 19px 10px
      .menu
        clear both
        min-width inherit
        float none
        &
        & > ul ul
          overflow hidden
          max-height 0
          background-color #f4f4f4
        & > li > ul.sub-menu
          padding 0px
          border none
        &.active
        & > ul ul.active
          max-height 55em
        & ul
          display inline
        & > ul
          border-top 1px solid #808080
        & li
        & > ul > li
          display block
        & li a
          color #000
          display block
          padding 0.8em
          border-bottom 1px solid #808080
          position relative
        & li.has-submenu > a:after
          content '+'
          position absolute
          top 0
          right 0
          display block
          font-size 1.5em
          padding 0.55em 0.5em
        & li.has-submenu > a.active:after
          content "-"
        & ul ul > li a
          background-color #e4e4e4
          height 58px
          padding 19px 18px 19px 30px
        & ul ul
        & ul ul ul
          display inherit
          position relative
          left auto
          top auto
          border none